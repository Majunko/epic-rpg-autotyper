{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "./build",
    "baseUrl": ".",
    "moduleResolution": "node",
    "importHelpers": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", ".vscode"]
}